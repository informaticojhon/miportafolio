---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Subtitle from "../components/Subtitle.astro";
import SobreMi from "../components/SobreMi.astro";
import Proyectos from "../components/Proyectos.astro";
import Tecnologias from "../components/tecnologias.astro";
import Footer from "../components/Footer.astro";
import { getTranslations } from '../i18n/translations';

const t = getTranslations('es');
---

<BaseLayout title="Jhon Chiguay | Portafolio">
  <!-- Navbar fijo arriba -->
  <Navbar />

  <!-- Hero -->
  <section
    id="inicio"
    class="relative h-screen flex flex-col justify-center items-center text-center px-6 md:px-12 text-white bg-cover bg-center"
    style="background-image: url('/isaac-benhesed-onLbXleIkds-unsplash.jpg');"
  >
    <!-- Capa oscura superpuesta para mejorar legibilidad del texto -->
    <div class="absolute inset-0 bg-black/50 z-0"></div>

    <!-- Contenido del Hero -->
    <div class="relative z-10">
      <h1 class="text-6xl md:text-7xl font-bold tracking-tight leading-tight mb-4">
        Jhon Chiguay
      </h1>
      <Subtitle />
    </div>
  </section>

  <SobreMi />
  <Tecnologias />
  <Proyectos />

  <!-- Contacto -->
  <section
    id="contacto"
    class="py-28 px-6 md:px-12 bg-light-background dark:bg-surface text-gray-900 dark:text-white border-t border-gray-200 dark:border-white/10 text-center fade-in"
  >
    <h2 class="text-4xl font-semibold mb-8" data-i18n="contact.title">{t.contact.title}</h2>
    <p class="text-lg max-w-3xl mx-auto text-light-secondary dark:text-secondary leading-relaxed">
      <span data-i18n="contact.description">{t.contact.description}</span>
    </p>
    <a
      href="mailto:jhonalan@gmail.com"
      class="relative inline-block mt-6 text-light-primary dark:text-primary text-xl font-medium after:block after:h-0.5 after:w-0 after:bg-light-primary dark:after:bg-primary after:transition-all after:duration-300 hover:after:w-full"
    >
      jhonalan@gmail.com
    </a>
  </section>

  <!-- Footer -->
  <Footer />
</BaseLayout>
