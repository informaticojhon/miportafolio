---
const proyectos = [
  {
    nombre: 'La Melinkana FM',
    descripcion: 'Radio comunitaria del Archipiélago de las Guaitecas, transmitiendo en vivo desde Melinka.',
    link: 'https://www.lamelinkanafm.cl',
    imagen: '/lamelinkanafm.png'
  },
  {
    nombre: 'Mapuche Trekan',
    descripcion: 'Sitio web informativo sobre el turismo mapuche en el Valle de Elicura. Diseño cultural y mapa interactivo.',
    link: 'https://www.mapuchetrekan.cl',
    imagen: '/mapuchetrekan.png'
  },
  {
    nombre: 'CABEN',
    descripcion: 'Empresa de transporte marítimo y soluciones logísticas en el sur de Chile. Diseño limpio y adaptable.',
    link: 'https://www.caben.cl',
    imagen: '/caben.png'
  }
]
---

<section id="proyectos" class="py-28 px-6 md:px-12 bg-surface text-white border-t border-white/10">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl font-semibold text-center mb-12">Proyectos</h2>

    <div class="grid md:grid-cols-3 gap-8">
      {proyectos.map(({ nombre, descripcion, link, imagen }) => (
        <a href={link} target="_blank" rel="noopener noreferrer" class="group block rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition duration-300 bg-gray-900 border border-white/10">
          <img src={imagen} alt={nombre} class="w-full h-48 object-cover group-hover:scale-105 transition duration-300" />
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2">{nombre}</h3>
            <p class="text-sm text-gray-300">{descripcion}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
