---
import ProjectCard from './ProjectCard.astro';
import { getTranslations } from '../i18n/translations';

const t = getTranslations('es');

const proyectos = [
  {
    nombre: 'La Melinkana FM',
    descripcion: 'Radio comunitaria del Archipiélago de las Guaitecas, transmitiendo en vivo desde Melinka.',
    link: 'https://www.lamelinkanafm.cl',
    imagen: '/lamelinkanafm.png'
  },
  {
    nombre: 'Mapuche Trekan',
    descripcion: 'Sitio web informativo sobre el turismo mapuche en el Valle de Elicura. Diseño cultural y mapa interactivo.',
    link: 'https://www.mapuchetrekan.cl',
    imagen: '/mapuchetrekan.png'
  },
  {
    nombre: 'CABEN',
    descripcion: 'Empresa de transporte marítimo y soluciones logísticas en el sur de Chile. Diseño limpio y adaptable.',
    link: 'https://www.caben.cl',
    imagen: '/caben.png'
  }
]
---

<section id="proyectos" class="py-28 px-6 md:px-12 bg-light-surface dark:bg-surface text-gray-900 dark:text-white border-t border-gray-200 dark:border-white/10 fade-in">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl font-semibold text-center mb-12" data-i18n="projects.title">{t.projects.title}</h2>

    <div class="grid md:grid-cols-3 gap-8">
      {proyectos.map((proyecto, index) => (
        <ProjectCard 
          {...proyecto} 
          descripcion={t.projects.items[index]?.description || proyecto.descripcion}
        />
      ))}
    </div>
  </div>
</section>

