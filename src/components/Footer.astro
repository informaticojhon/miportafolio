---
import { getTranslations } from '../i18n/translations';
const t = getTranslations('es');
const year = new Date().getFullYear();
---

<footer class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-white py-10 px-6 mt-20 border-t border-gray-200 dark:border-white/10">
  <div class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center gap-6">
    <!-- Info -->
    <div class="text-center md:text-left">
      <p class="text-sm">&copy; {year} Jhon Chiguay. <span data-i18n="footer.rights">{t.footer.rights}</span></p>
      <p class="text-sm text-light-secondary dark:text-gray-400 mt-1" data-i18n="footer.location">
        {t.footer.location}
      </p>
    </div>

    <!-- Redes -->
    <div class="flex gap-4">
      <a href="https://github.com/informaticojhon" target="_blank" class="hover:text-light-primary dark:hover:text-blue-400 transition" aria-label="GitHub">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 fill-current" viewBox="0 0 24 24">
          <path d="M12 .5C5.37.5 0 5.87 0 12.5c0 5.29 3.438 9.773 8.205 11.363.6.113.82-.263.82-.583 0-.288-.01-1.05-.015-2.06-3.338.726-4.042-1.61-4.042-1.61-.546-1.39-1.333-1.76-1.333-1.76-1.09-.745.083-.729.083-.729 1.205.085 1.84 1.238 1.84 1.238 1.07 1.833 2.805 1.303 3.49.997.108-.775.418-1.303.76-1.603-2.665-.302-5.466-1.332-5.466-5.931 0-1.31.47-2.38 1.236-3.22-.125-.303-.535-1.523.115-3.176 0 0 1.005-.322 3.3 1.23a11.5 11.5 0 0 1 3-.403c1.02.005 2.045.138 3 .403 2.28-1.552 3.285-1.23 3.285-1.23.655 1.653.245 2.873.12 3.176.77.84 1.235 1.91 1.235 3.22 0 4.61-2.805 5.625-5.475 5.921.43.37.81 1.102.81 2.222 0 1.604-.015 2.897-.015 3.293 0 .325.21.702.825.582C20.565 22.265 24 17.79 24 12.5 24 5.87 18.63.5 12 .5Z"/>
        </svg>
      </a>
      <a href="https://www.linkedin.com/in/jhon-chiguay/" target="_blank" class="hover:text-light-primary dark:hover:text-blue-400 transition" aria-label="LinkedIn">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 fill-current" viewBox="0 0 24 24">
          <path d="M4.983 3.5C4.983 2.12 6.084 1 7.5 1S10.017 2.12 10.017 3.5 8.916 6 7.5 6 4.983 4.88 4.983 3.5zM1 8.75h5v15H1v-15zM14.244 8.5c-2.687 0-3.756 1.48-4.244 2.5V8.75H5v15h5v-8.25c0-2.25 2-2.5 2-2.5s2 .25 2 2.5V23.75h5v-8.25c0-4.5-2.5-7-5.756-7z"/>
        </svg>
      </a>
    </div>
  </div>

  <!-- BotÃ³n "Volver arriba" -->
  <a
    href="#inicio"
    data-i18n-aria="footer.backToTop"
    aria-label={t.footer.backToTop}
    class="fixed bottom-6 right-6 z-50 liquid-glass text-light-primary dark:text-primary p-4 rounded-full shadow-lg hover:scale-110 transition-transform hover:shadow-xl"
  >
    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" d="M5 15l7-7 7 7" />
    </svg>
  </a>
</footer>
